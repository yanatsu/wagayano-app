<header>

</header>
<main>
    <h1 class="title">買い物リスト　一覧</h1>
    <div class="box">
        <div class="t-ble">
            <table>
                <thead>
                    <tr>
                        <td>項目</td>
                        <td>在庫数</td>
                        <td>最低在庫数</td>
                    </tr>
                </thead>
                <tbody>
                    <% @applications.each do |application| %>
                    <% if application.stock < application.required %>
                    <tr>
                        <td><%= link_to application.item, application_path(application) %></td>
                        <td><%= application.stock %></td>
                        <td><%= application.required %></td>
                    </tr>
                    <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="return-box">
            <%= link_to '戻る', 'javascript:history.back()' %>
        </div>
    </div>
</main>
